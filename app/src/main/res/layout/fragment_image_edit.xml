<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/black">
    <TextView
        android:id="@+id/edit_title"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#70000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"/>
    <com.isseiaoki.simplecropview.CropImageView
        android:id="@+id/cropImageView"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="16dp"
        custom:cropMode="ratio_free"
        android:layout_below="@+id/edit_title"
        android:layout_above="@+id/edit_image"/>
    <ImageView
        android:id="@+id/edit_image"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/edit_save_button_container"/>
    <RelativeLayout
        android:id="@+id/edit_save_button_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_above="@+id/edit_toolbar_container">
        <TextView
            android:id="@+id/edit_save_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/white_a50"
            android:text="SAVE"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/edit_toolbar_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/edit_item_crop"
            android:background="@color/black_a90"
            android:layout_width="72dp"
            android:layout_height="72dp">
            <ImageView
                android:id="@+id/edit_item_crop_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_content_cut_white_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/edit_item_crop_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/edit_item_crop_image"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/white_a50"
                android:text="CROP"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>