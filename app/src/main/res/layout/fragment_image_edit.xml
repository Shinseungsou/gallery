<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">
    <TextView
        android:id="@+id/edit_title"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#70000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"/>
    <com.isseiaoki.simplecropview.CropImageView
        android:id="@+id/cropImageView"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="16dp"
        custom:cropMode="ratio_free"
        android:layout_below="@+id/edit_title"
        android:layout_above="@+id/edit_save_button_container"/>
    <HorizontalScrollView
        android:id="@+id/edit_crop_item_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/edit_save_button_container"
        android:visibility="gone">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <RelativeLayout
                android:id="@+id/edit_crop_item_16_9"
                android:background="@color/black_a90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:id="@+id/edit_crop_item_16_9_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_crop_16_9_white_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/edit_crop_item_16_9_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/edit_crop_item_16_9_image"
                    android:layout_toEndOf="@+id/edit_crop_item_16_9_image"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white_a50"
                    android:textSize="12sp"
                    android:text="16:9"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/edit_crop_item_4_3"
                android:background="@color/black_a90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:id="@+id/edit_crop_item_4_3_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_crop_5_4_white_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/edit_crop_item_4_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/edit_crop_item_4_3_image"
                    android:layout_toEndOf="@+id/edit_crop_item_4_3_image"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white_a50"
                    android:textSize="12sp"
                    android:text="4:3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/edit_crop_item_1_1"
                android:background="@color/black_a90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:id="@+id/edit_crop_item_1_1_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_crop_din_white_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/edit_crop_item_1_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/edit_crop_item_1_1_image"
                    android:layout_toEndOf="@+id/edit_crop_item_1_1_image"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white_a50"
                    android:textSize="12sp"
                    android:text="1:1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/edit_crop_item_free"
                android:background="@color/black_a90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:id="@+id/edit_crop_item_free_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_crop_free_white_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/edit_crop_item_free_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/edit_crop_item_free_image"
                    android:layout_toEndOf="@+id/edit_crop_item_free_image"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white_a50"
                    android:textSize="12sp"
                    android:text="free"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/edit_crop_item_circle"
                android:background="@color/black_a90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:id="@+id/edit_crop_item_circle_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_panorama_fish_eye_white_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/edit_crop_item_circle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/edit_crop_item_circle_image"
                    android:layout_toEndOf="@+id/edit_crop_item_circle_image"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white_a50"
                    android:textSize="12sp"
                    android:text="circle"/>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/edit_save_button_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_above="@+id/edit_toolbar_container">
        <TextView
            android:id="@+id/edit_cancel_button"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/edit_save_button"
            android:layout_toStartOf="@+id/edit_save_button"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textColor="@color/white_a50"
            android:text="CANCEL"/>
        <TextView
            android:id="@+id/edit_save_button"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textColor="@color/white_a50"
            android:text="SAVE"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/edit_toolbar_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/edit_item_cancel"
            android:background="@color/black_a90"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="12dp">
            <ImageView
                android:id="@+id/edit_item_cancel_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_cancel_white_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/edit_item_cancel_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/edit_item_cancel_image"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/white_a50"
                android:text="CANCEL"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_item_crop"
            android:background="@color/black_a90"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="12dp">
            <ImageView
                android:id="@+id/edit_item_crop_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_content_cut_white_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/edit_item_crop_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/edit_item_crop_image"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/white_a50"
                android:text="CROP"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_item_rotate"
            android:background="@color/black_a90"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="12dp">
            <ImageView
                android:id="@+id/edit_item_rotate_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_rotate_right_white_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/edit_item_rotate_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/edit_item_rotate_image"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/white_a50"
                android:text="ROTATE"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>