<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/date"
        android:background="@color/log_divider1"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_date"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/name"
        android:background="@color/log_divider2"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_name"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/title"
        android:background="@color/log_divider1"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_title"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/picture_id"
        android:background="@color/log_divider2"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_id"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/directory"
        android:background="@color/log_divider1"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_bucket"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/type"
        android:background="@color/log_divider2"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_type"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/to_path"
        android:background="@color/log_divider1"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_to_path"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/share"
        android:background="@color/log_divider2"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_share"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/note"
        android:background="@color/log_divider1"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/log_note"
        android:layout_height="40dp"/>
</LinearLayout>